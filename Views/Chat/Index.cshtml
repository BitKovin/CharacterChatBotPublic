@model CharacterChatBot.Models.ChatViewModel

<head>
    <title>Instagram Messenger</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .page-container {
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .header {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            padding: 10px;
            background-color: #fff;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.3);
        }

            .header img {
                width: 50px;
                height: 50px;
                border-radius: 50%;
                margin-right: 10px;
            }

            .header h1 {
                font-size: 20px;
                font-weight: bold;
                margin: 0;
            }

        .message-container {
            flex: 1;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            padding: 20px;
        }

        .message {
            display: flex;
            flex-direction: column;
            margin-bottom: 10px;
        }

        .message-bot {
            align-items: flex-start;
        }

        .message-user {
            align-items: flex-end;
        }

        .message-body {
            padding: 10px;
            border-radius: 5px;
        }

        .message-bot .message-body {
            background-color: #f2f2f2;
            color: #333;
        }

        .message-user .message-body {
            background-color: #0099ff;
            color: #fff;
        }

        .message-time {
            font-size: 12px;
            color: #999;
            margin-top: 5px;
            text-align: right;
        }

        .input-container {
            display: flex;
            align-items: center;
            margin-top: auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0px -10px 10px rgba(0,0,0,0.3);
        }

            .input-container input {
                flex: 1;
                padding: 10px;
                border-radius: 5px;
                border: none;
                margin-right: 10px;
                font-size: 16px;
            }

            .input-container button {
                padding: 10px 20px;
                border-radius: 5px;
                border: none;
                background-color: #0099ff;
                color: #fff;
                font-size: 16px;
                cursor: pointer;
            }


    </style>
</head>
<body>
    <div class="page-container">
        <div class="header">
            <img src="@Model.ImageUrl" alt="Bot Avatar">
            <h1>@Model.BotName</h1>
        </div>
        <div class="message-container" id="message-container">
            @foreach (var message in Model.messages)
            {
                <div class="message @(message.isBot ? "message-bot" : "message-user")">
                    <div class="message-body">
                        @message.content
                    </div>
                    <div class="message-time">
                    </div>
                </div>
            }
        </div>
        <div class="input-container">
            
                <input type="text" id="messageBox" placeholder="Type your message here...">
                <button id="SendButton">Send</button>
            
        </div>
    </div>
</body>
<input type="hidden" id = "ChatId" value="@Model.ChatId">
<script>

    but = document.getElementById('SendButton');
    but.addEventListener('click', function () {

        send();

    });

    function send()
    {
        var s = document.getElementById("messageBox").value
        var s = s.toString();

        var id = document.getElementById("ChatId").value
        var id = id.toString();

        window.location.href = "@Url.Action("Send", "Chat")?id=" + id + "&message=" + s;

        document.getElementById("messageBox").value = "";
    }

    window.onload = function () {
        var container = document.getElementById("message-container");
        container.scrollTop = container.scrollHeight;
    }

</script>