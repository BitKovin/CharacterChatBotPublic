<head>
    <title>Instagram Messenger</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .page-container {
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .header {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            padding: 10px;
            background-color: #fff;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.3);
        }

            .header img {
                width: 50px;
                height: 50px;
                border-radius: 50%;
                margin-right: 10px;
            }

            .header h1 {
                font-size: 20px;
                font-weight: bold;
                margin: 0;
            }

        .message-container {
            flex: 1;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            padding: 20px;
        }

        .message {
            display: flex;
            flex-direction: column;
            margin-bottom: 10px;
        }

        .message-bot {
            align-items: flex-start;
        }

        .message-user {
            align-items: flex-end;
        }

        .message-body {
            padding: 10px;
            border-radius: 5px;
        }

        .message-bot .message-body {
            background-color: #f2f2f2;
            color: #333;
        }

        .message-user .message-body {
            background-color: #0099ff;
            color: #fff;
        }

        .message-time {
            font-size: 12px;
            color: #999;
            margin-top: 5px;
            text-align: right;
        }

        .input-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0px -10px 10px rgba(0,0,0,0.3);
        }

            .input-container > div {
                width: 100%;
            }

            .input-container input {
                width: 100%;
                padding: 10px;
                border-radius: 5px;
                border: none;
                margin-right: 10px;
                font-size: 16px;
                background-color: #f0f5fc;
                border-bottom: 1px solid #ccc;
            }

            .input-container button {
                padding: 10px 20px;
                border-radius: 5px;
                border: none;
                background-color: #0099ff;
                color: #fff;
                font-size: 16px;
                cursor: pointer;
            }

    </style>
</head>

<body>
    <div class="input-container">

        <div>
            <input type="text" id="ChatId" placeholder="Type chat id">
            <input type="text" id="name" placeholder="Character name">
            <input type="text" id="gender" placeholder="Character gender">
        </div>

        <div>
            <input type="text" id="desc" placeholder="Character description">
            <input type="text" id="univerce" placeholder="Univerce">
        </div>

        <div>
            <input type="text" id="pfp" placeholder="Url to character's profile picture">
        </div>

        <button id="SelectButton">Create</button>

    </div>

</body>

<script>
    but = document.getElementById('SelectButton');
    but.addEventListener('click', function () {
        var id = document.getElementById("ChatId").value
        var id = id.toString();
        var name = document.getElementById("name").value
        var name = name.toString();
        var gender = document.getElementById("gender").value
        var gender = gender.toString();
        var desc = document.getElementById("desc").value
        var desc = desc.toString();
        var univerce = document.getElementById("univerce").value
        var univerce = univerce.toString();
        var pfp = document.getElementById("pfp").value
        var pfp = pfp.toString();

        window.location.href = "@Url.Action("Create", "Chat")?id=" + id + "&" + "name=" + name + "&" + "gender=" + gender + "&" + "desc=" + desc + "&" + "univerce=" + univerce + "&pfp="+pfp;

    });
</script>